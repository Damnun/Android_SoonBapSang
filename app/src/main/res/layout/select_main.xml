<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/logo_font"
        android:textSize="60px"
        android:textColor="#0251A2"
        android:textAlignment="center"
        android:text="어떤 서비스를 이용할까요?" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/select_takeout_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="35dp"
            android:layout_gravity="center"
            android:text="developer testing" />

        <Button
            android:id="@+id/select_market_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:text="가게 반찬 포장" />

    </LinearLayout>


</LinearLayout>